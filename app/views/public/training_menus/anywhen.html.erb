<div class="container">
  <div class="row m-5">
    <div class="col-sm-12">
      <h1 class="font-weight-bold text-center"><%= @training_menu %>のトレーニングメニュー</h1>
    </div>
  </div>
  <div class="row m-5">
    <div class="col-sm-12">
      <table class="table table-borderless">
        <thead class="thead-dark">
         <tr>
          <th>名前</th>
          <th>部位</th>
          <th>回数×セット</th>
          <th>種類</th>
         </tr>
        </thead>
        <tbody>
          <% @training_menus.each do |menu| %>
          <tr>
            <td>
              <%= link_to training_menu_path(menu.id) do %>
              <%= menu.training_name.name %>
              <% end %>
            </td>
            <td><%= menu.training_name.genre.name %></td>
            <td><%= menu.count %>×<%= menu.set %></td>
            <td>
              <% if menu.status == TrainingMenu.statuses.key(1) %>
              <%= menu.weight %>kg
              <% elsif menu.status == TrainingMenu.statuses.key(0)  %>
              <p>自重</p>
              <% else %>
              <%= menu.distance %>km
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <%= link_to "開始！", check_path, class: "btn btn-success col-lg-5 col-md-5" %>
    </div>
  </div>
</div>
