<div class="container">
  <div class="row my-4">
    <div class="col-sm-12">
      <div class="card shadow-lg">
        <h1 class="card-header text-center">
          <%= image_tag @tweet.user.get_profile_image(50,50), class: "rounded-circle float-left" %>
          <%= @tweet.user.nickname %>さんの呟き
          <% if @tweet.user_id != current_user.id %>
            <% if @tweet.reported_by?(current_user) %>
            <%= link_to 'ツイートを通報する', tweet_reports_path(@tweet), method: :post, class: "btn btn-danger btn-sm float-right", data: { confirm: "不適切なツイートとして通報しますか？" } %>
            <% end %>
          <% end %>
        </h1>
        <div class="card-body">
          <h1 class="card-text text-center"><%= @tweet.text %></h1>
           <div class="row">
            <div class="col-sm-12">
             <h3>
               <div id="favorite_btn_<%= @tweet.id %>">
                 <%= render 'public/favorites/favorite', tweet: @tweet %>
               </div>
             </h3>
             </div>
            </div>
            <%= render 'post_comments', post_comments: @post_comments %>
           </div>
        </div>
      </div>
  </div>
</div>

