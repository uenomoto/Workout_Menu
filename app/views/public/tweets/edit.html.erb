<div class="container">
  <div class="row mt-5">
    <div class="col-lg-3"></div>
    <div class="col-sm-12 col-lg-6">
      <%= form_with model: @tweet, url: tweet_path, method: :patch do |f| %>
       <%= render 'layouts/error', model: f.object %>
      <h1><%= f.label :"つぶやき編集" %></h1>
          <%= f.text_field :text, class: "form-control" %>
          <%= f.submit "編集する", class: "btn btn-info col-lg-4 col-md-4 float-right mt-3" %>
          <% end %>
    </div>
  </div>
</div>
