<div class="container">
  <div class="tweet row text-center my-4">
    <div class="col-sm-12">
     <h1>つぶやき一覧</h1>
     <%= link_to new_tweet_path, class: "btn btn-success btn-sm float-right" do %>
     <i class="fa fa-plus-circle"></i>つぶやく
     <% end %>
    </div>
  </div>
  <div class="tweet row">
    <div class="col-sm-12">
     <div class="d-flex flex-column">
       <%= render "tweet", tweets: @tweets %>
     </div>
    </div>
  </div>
  <%= paginate @tweets %>
</div>
