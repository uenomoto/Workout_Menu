<div class="container">
  <div class="row m-3">
    <div class="col-sm-12 text-center">
      <h1>会員ログイン</h1>
    </div>
  </div>
  <div class="row m-3">
    <div class="col-lg-3"></div>
    <div class="col-sm-12 col-lg-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

   <div class="form-group">
     <%= f.label :"ニックネーム" %>
     <i class="fas fa-user"></i>
     <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム", class: "form-control" %>
   </div>

   <div class="form-group">
     <%= f.label :"パスワード" %>
     <i class="fas fa-lock"></i>
     <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-2", id: "see" %>
     <input type="checkbox" onChange="document.getElementById('see').type = (this.checked) ? 'text' : 'password';">
     パスワードを表示する
   </div>


   <div class="sign in">
     <%= f.submit "ログイン", class: "btn btn-success form-control col-lg-3 float-right" %>
   </div>
     <% end %>
    <h5 class="float-right mt-3">登録がお済みでない方は<span><%= link_to "こちらからお願いします！", new_user_registration_path, class: "btn btn-primary" %></span></h5>
  </div>
 </div>
</div>
