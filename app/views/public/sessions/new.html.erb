<div class="container">
  <h1>会員ログイン</h1>
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :"ニックネーム" %>
    <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム" %>
  </div>

  <div class="form-group">
    <%= f.label :"パスワード" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>


  <div class="sign in">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<h5>登録がお済みでない方は<span><%= link_to "こちらからお願いします！", new_user_registration_path %></span></h5>
</div>
