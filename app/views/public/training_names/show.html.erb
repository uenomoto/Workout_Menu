<div class="container">
  <div class="row my-5">
    <div class="col-sm-12 text-center">
      <h1><%= @training_name.name %></h1>
    </div>
  </div>
  <div class="row">
   <div class="col-lg-2"></div>
    <div class="col-sm-12 col-lg-10">
      <table class="table table-borderless">
        <tr>
          <th>部位</th>
          <td><%= @training_name.genre.name %></td>
        </tr>
        <tr>
          <th>説明文</th>
          <td><%= @training_name.introduction %></td>
        </tr>
      </table>
    </div>
    <div class="col-lg-3"></div>
  </div>
  <div class="row m-5">
    <div class="col-md-4 col-sm-12 text-center">
      <%= link_to "トレ名編集", edit_training_name_path, class: "btn btn-info btn-sm col-lg-6" %>
    </div>
    <div class="col-md-4 col-sm-12 text-center">
      <%= link_to "トレ名削除", training_name_path, method: :delete,
      data: {confirm: "#{ @training_name.name }削除してもよろしいですか？"}, class: "btn btn-danger btn-sm col-lg-6" %>
    </div>
    <div class="col-md-4 col-sm-12 text-center">
      <%= link_to "メニューを作る", new_training_menu_path, class: "btn btn-warning btn-sm col-lg-6", data: {"turbolinks" => false} %>
    </div>
  </div>
</div>
