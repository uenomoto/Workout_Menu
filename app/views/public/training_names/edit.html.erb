<div class="container">
  <div class="row m-5">
    <div class="col-md-12 text-center">
     <h1>トレーニング名編集するときはここ！</h1>
    </div>
  </div>
  <div class="row m-2">
    <div class="col-md-3"></div>
    <div class="col-md-7 text-center">

      <%= form_with model: @training_name, url: training_name_path, method: :patch do |f| %>
      <%= render 'layouts/error', model: f.object %>

  <div class="form-group">
    <%= f.label :"トレーニング名" %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :"部位" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :"説明文" %>
    <%= f.text_area :introduction, autofocus: true, class: "form-control" %>
  </div>

  <div class="submit">
    <%= f.submit "編集する", class: "btn btn-success" %>
  </div>
  <% end %>

    </div>
  </div>
</div>
