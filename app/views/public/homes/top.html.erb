          <div class="row">
            <div class="col-lg-12 col-sm-12">
              <%= link_to 'ゲストログイン(閲覧用)', users_guest_sign_in_path, method: :post, class: "btn btn-secondary btn-block col-md-12" %>
              <% end %>
            </div>
