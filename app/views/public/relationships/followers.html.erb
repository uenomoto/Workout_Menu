    <h1><%= @user.nickname %>さんのフォロワーユーザーの一覧</h1>
  </div>
  <div class="row my-2">
    <% if @users.exists? %>
     <%= render 'public/users/index', users: @users %>
    <% else %>
     <h1 class="text-danger mt-5">ユーザーはいません＞＜</h1>
    <% end %>
  </div>
</div>
