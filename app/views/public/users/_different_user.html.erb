<div class="row m-5">
        <div class="col-sm-12 text-center">
            <h1><%= user.nickname %>さんの詳細ページ</h1>
        </div>
    </div>
    <div class="row m-3">
        <div class="col-sm-12 col-lg-3">
            <%= image_tag user.get_profile_image(200,200), class: "rounded-circle" %>
        </div>
        <div class="col-sm-12 col-lg-9">
            <table class="table table-borderless" style="font-size:25px;">
                <tr>
                    <th>ニックネーム</th>
                    <td><%= user.nickname %></td>
                </tr>
                <tr>
                    <th>都道府県</th>
                    <td><%= user.prefecture %></td>
                </tr>
                <tr>
                    <th>自己紹介</th>
                    <td><%= user.introduction %></td>
                </tr>
                <tr>
                    <th></th>
                    <td>
                     <% if user.is_deleted == false %>
                     <p class="text-success font-weight-bold">会員中</p>
                     <% else %>
                     <p class="text-danger font-weight-bold">退会会員です</p>
                     <% end %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="col-sm-12 text-center">
        <%= link_to "つぶやき一覧", impressions_path, class: "btn btn-primary col-lg-4 col-md-4" %>
    </div>
