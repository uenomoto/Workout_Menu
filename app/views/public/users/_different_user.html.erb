<div class="row mt-3">
  <div class="col-sm-12 text-center">
   <h1><%= user.nickname %>さんの詳細ページ</h1>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-6 text-center">
    <%= link_to user_followings_path(user_id: user.id) do %>
    <%= "#{user.followings.count}人フォロー中" %>
    <% end %>
  </div>
  <div class="col-md-6 text-center">
   <%= link_to user_followers_path(user_id: user.id) do %>
   <%= "#{user.followers.count}人のフォロワー" %>
   <% end %>
  </div>
</div>

 <div class="row mt-3">
  <div class="col-sm-12 col-lg-3">
   <%= image_tag user.get_profile_image(200,200), class: "profile-image rounded-circle" %>
  </div>
  <div class="col-sm-12 col-lg-9">
    <table class="table table-borderless">
     <tr>
      <th>ニックネーム</th>
      <td><%= user.nickname %></td>
     </tr>
     <tr>
      <th>都道府県</th>
      <td><%= user.prefecture %></td>
     </tr>
     <tr>
      <th>自己紹介</th>
      <td><%= user.introduction %></td>
     </tr>
     <tr>
      <th></th>
     </tr>
    </table>
  </div>
 </div>

<div class="row mt-2">
 <div class="col-sm-12 col-lg-6 col-md-6">
  <%= link_to "つぶやき一覧", tweet_permember_path(user), class: "btn btn-primary col-lg-6" %>
 </div>
 <div class="col-sm-12 col-lg-6 col-md-6 mb-3">
   <% if current_user.following?(user) %>
   <%= link_to "フォロー解除", user_relationships_path(user_id: user.id), method: :delete, class: "btn btn-danger col-lg-6" %>
   <% else %>
   <%= link_to "フォローする", user_relationships_path(user_id: user.id), method: :post, class: "btn btn-success col-lg-6" %>
   <% end %>
 </div>
</div>
