<div class="container">
  <div class="row m-5">
    <div class="col-12 text-center">
     <h1>会員情報編集</h1>
    </div>
  </div>
  <div class="row m-2">
    <div class="col-12">

      <%= form_with model: @user, url: "/users/information/#{current_user.id}", method: :patch do |f| %>
       <%= render 'layouts/error', model: f.object %>

      <div class="form-group">
    <%= f.label :"ニックネーム" %>
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :"都道府県" %>
    <%= f.text_field :prefecture, autofocus: true %>県
  </div>

  <div class="form-group">
    <%= f.label :"メールアドレス" %>
    <%= f.text_field :email, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :"自己紹介" %>
    <%= f.text_area :introduction, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :"プロフィール画像" %>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
  <div class="sign up">
    <%= f.submit "情報変更する", class: "btn btn-success" %>
  </div>
  <% end %>

    </div>
  </div>
</div>
