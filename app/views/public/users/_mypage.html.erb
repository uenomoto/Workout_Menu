<div class="row m-5">
        <div class="col-sm-12 text-center">
            <h1>マイページ</h1>
        </div>
    </div>
    <div class="row m-2">
        <div class="col-sm-12 col-md-3">
            <%= image_tag user.get_profile_image(200,200) %>
        </div>
        <div class="col-sm-12 col-md-7">
            <table class="table table-bordered table-dark">
                <tr>
                    <th>ニックネーム</th>
                    <td><%= user.nickname %></td>
                </tr>
                <tr>
                    <th>都道府県</th>
                    <td><%= user.prefecture %>県</td>
                </tr>
                <tr>
                    <th>メールアドレス</th>
                    <td><%= user.email %></td>
                </tr>
                <tr>
                    <th>自己紹介</th>
                    <td><%= user.introduction %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row m-5">
        <div class="col-md-4 col-sm-12 text-center">
            <%= link_to "マイページ編集", users_edit_path, class: "btn btn-success" %>
        </div>
        <div class="col-md-4 col-sm-12 text-center">
            <%= link_to "呟き一覧", impressions_path, class: "btn btn-info" %>
        </div>
        <div class="col-md-4 col-sm-12 text-center">
            <%= link_to "メニューを作る", new_training_menu_path, class: "btn btn-warning" %>
        </div>
    </div>
