<% if @impression.favorited?(current_user) %>
    <!--一致するレコードが存在する＝すでにいいね済みの場合はdestroyアクションへ-->
    <%= link_to impression_favorites_path(@impression.id), method: :delete do %>
        <span><i class="fas fa-thumbs-up" style="color:orange;"></i>︎</span>
    <% end %>
<% else %>
    <!--一致するレコードが存在しない＝まだいいねしていない場合はcreateアクションへ-->
    <%= link_to impression_favorites_path(@impression.id), method: :post do %>
        <span><i class="fa fa-thumbs-up"></i>いいねしてね！</span>
    <% end %>
<% end %>
