<% tweets.first(10).each do |tweet| %>
      <div class="card mb-3 shadow-lg">
         <div class="card-body">
          <h2 class="card-text"><%= tweet.text %></h2>
          <div class="row">
            <div class="col-sm-3">
             <%= link_to admin_user_path(tweet.user.id) do %>
             <%= image_tag tweet.user.get_profile_image(100,100), class: "rounded-circle" %>
             <% end %>
            </div>
            <div class="col-sm-9">
             <p>ニックネーム：<%= tweet.user.nickname %><br>
             <%= tweet.post_comments.count %>コメント |
             <%= tweet.favorites.count %>いいね |
             <span class="text-danger">通報 <%= tweet.reports.count %> 件</span>
             </p>
             <%= link_to "つぶやき削除", admin_tweet_path(tweet.id), method: :delete, "data-confirm" => "通報が多いので削除する？",class: "btn btn-danger col-md-5" %>
             <%= link_to "つぶやき詳細", admin_tweet_path(tweet.id), class: "btn btn-primary col-md-4" %>
             <div class="font-weight-bold">
              投稿日:  <%= tweet.created_at.strftime('%Y/%m/%d') %>
             </div>
            </div>
          </div>
         </div>
      </div>
<% end %>